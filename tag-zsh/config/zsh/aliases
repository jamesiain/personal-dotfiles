
# Unix
alias ls="ls --color"
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias f='find . -iname'
alias tlf='tail -f'
alias e="$EDITOR"
alias v="$VISUAL"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Some better defaults
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias sed='sed -E'
alias tmux='tmux -2'

# Conveniences for ad-hoc scripting
alias -g WRF="|while read file; do"     # find . -type f WRF echo $file; done
alias -g NOE="2> /dev/null"             # grep alias .* NOE | sort
